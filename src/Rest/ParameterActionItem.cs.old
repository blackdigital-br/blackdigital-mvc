using BlackDigital.Rest;
using Microsoft.AspNetCore.Http;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Reflection;
using System.Text;
using System.Threading.Tasks;

namespace BlackDigital.Mvc.Rest
{
    internal class ParameterActionItem
    {
        internal ParameterActionItem(ParameterInfo parameter)
        {
            if (parameter is null)
                throw new ArgumentNullException(nameof(parameter));

            Name = parameter.Name ?? string.Empty;
            Type = parameter.ParameterType;
            Route = parameter.GetCustomAttribute<RouteAttribute>();
            Header = parameter.GetCustomAttribute<HeaderAttribute>();
            Body = parameter.GetCustomAttribute<BodyAttribute>();
            Query = parameter.GetCustomAttribute<QueryAttribute>();
        }

        internal readonly string Name;
        internal readonly Type Type;
        internal readonly RouteAttribute? Route;
        internal readonly HeaderAttribute? Header;
        internal readonly BodyAttribute? Body;
        internal readonly QueryAttribute? Query;


    }
}
